<view class="page">
  <view class="page__hd">
    <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
      <block wx:for="{{imgUrls}}" wx:key="*this">
        <swiper-item>
          <image src="{{item}}" class="slide-image" style="width:100%" height="150" mode='widthFix'/>
        </swiper-item>
      </block>
    </swiper>

  </view>
  <view class="page__bd">
    <view class="weui-grids">
      <!-- <block wx:for="{{grids}}" wx:key="*this"> -->
      <navigator url="../activityList/activityList" class="weui-grid" hover-class="weui-grid_active">
        <image class="weui-grid__icon" src="../img/sendinfo.png" />
        <view class="weui-grid__label">我要报名</view>
      </navigator>
      <navigator url="" class="weui-grid" hover-class="weui-grid_active" bindtap="nothing">
        <image class="weui-grid__icon" src="../img/wallet.png" />
        <view class="weui-grid__label">我要赚钱</view>
      </navigator>
      <navigator url="" class="weui-grid" hover-class="weui-grid_active" bindtap="nothing">
        <image class="weui-grid__icon" src="../img/run.png" />
        <view class="weui-grid__label">我要减肥</view>
      </navigator>
      <navigator url="" class="weui-grid" hover-class="weui-grid_active" bindtap="nothing">
        <image class="weui-grid__icon" src="../img/cloud.png" />
        <view class="weui-grid__label">我要上天</view>
      </navigator>
      <navigator url="" class="weui-grid" hover-class="weui-grid_active" bindtap="nothing">
        <image class="weui-grid__icon" src="../img/shopping.png" />
        <view class="weui-grid__label">我要买买</view>
      </navigator>
      <navigator url="" class="weui-grid" hover-class="weui-grid_active" bindtap="nothing">
        <image class="weui-grid__icon" src="../img/overflowdots.png" />
        <view class="weui-grid__label">我要...</view>
      </navigator>
      <!-- </block> -->
    </view>
  </view>
</view>